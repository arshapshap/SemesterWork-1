<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/common.css">
    <link rel="stylesheet" href="~/css/main.css">
    <title>{{ if show_popular }}Популярные публикации{{ else }}Новые публикации{{ end }}</title>
</head>

<body class="body">
    <div class="container">
        {{ include 'elements/header.sbnhtml' current_user }}
        <div class="categories">
            <a {{ if !show_popular }}href="/popular"{{ end }} class="{{ if show_popular }}selected-link{{ else }}link{{ end }}">Популярные публикации</a>
            |
            <a {{ if show_popular }}href="/new"{{ end }} class="{{ if !show_popular }}selected-link{{ else }}link{{ end }}">Новые публикации</a>
            {{ if current_user }}
            |
            <a href="/publication" class="link">Создать публикацию</a>
            {{ end }}
        </div>
        <div class="publications">
            {{ if publications.size == 0 }}
            <h1 class="categories no-publications-text">Нет публикаций</h1>
            {{ end }}
            {{ for publication in publications }}
                {{ include 'elements/publication.sbnhtml' publication }}
            {{ end }}
        </div>
</body>

</html>